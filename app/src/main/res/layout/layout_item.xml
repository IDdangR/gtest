<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageUrl"
        android:textAlignment="center"
        android:textColor="#A2A2A2"
        android:layout_marginStart="10dp"
        tools:text="86"/>

    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/brandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/productTitle"
        app:layout_constraintStart_toEndOf="@id/productRank"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/spoqahansansneo_medium"
        android:textColor="#595959"
        tools:text="dddddd"/>
    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/brandTitle"
        app:layout_constraintStart_toEndOf="@id/productRank"
        android:layout_marginStart="12dp"
        android:textColor="#595959"
        tools:text="dddddd"/>
    <TextView
        android:id="@+id/ratingAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/productRank"
        android:layout_marginStart="12dp"
        android:textColor="#595959"
        tools:text="dddddd"/>

</androidx.constraintlayout.widget.ConstraintLayout>

